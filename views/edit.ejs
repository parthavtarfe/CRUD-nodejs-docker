<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add product</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <center><h2>Edit product details</h2></center>
    <div class="container">
        
        <form action="#">
            <div class="form-group">
                <label for="name">Product name</label>
                <input class="form-control" type="text" name="name" id="name" value="<%= item.name %>">
            </div>
            <div class="form-group">
                <label for="name">Product description</label>
                <textarea class="form-control" type="text" name="description" id="description"><%= item.description %></textarea>
            </div>
            <div class="form-group">
                <label for="name">Product price</label>
                <input class="form-control" type="text" name="price" id="price" value="<%= item.price %>">
            </div>
            <div class="form-group">
                <label for="name">Product quantity</label>
                <input class="form-control" type="number" name="quantity" id="quantity" value="<%= item.quantity %>">
            </div>
            <div class="form-actions">
                <button class="btn btn-primary" type="button" onclick="editProduct()"> Edit Product</button>
            </div>
        </form>
    </div>
</body>
</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
<!-- <script src="../environment.js"></script> -->
<script>


function editProduct() {
    let name = document.getElementById("name").value;
    let description = document.getElementById('description').value;
    let price = document.getElementById("price").value;
    let quantity = document.getElementById("quantity").value;
    let urlParts = window.location.href.split("/");
    let productID = urlParts[urlParts.length - 1];
    axios({
        method:"post",
        url:`http://localhost:3000/product/editproduct`,
        data:{
            productID:productID,
            name:name,
            description:description,
            price:price,
            quantity:quantity
        }
    }).then((response)=>{
        console.log(response);
        alert(response.data.message);
    }).catch((error=>{
        console.log(error);
    }))
}
</script>